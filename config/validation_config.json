{
  "version": "1.0",
  "description": "Terra35 Vanilla Operations Cost Analysis - Data Validation Configuration",
  "last_updated": "2024-12-30",
  
  "data_quality_thresholds": {
    "excellent": 0.95,
    "good": 0.85,
    "acceptable": 0.70,
    "poor": 0.50,
    "unacceptable": 0.30
  },
  
  "price_ranges": {
    "min_reasonable_cost": 0.01,
    "max_reasonable_cost": 100000.0,
    "suspicious_high_threshold": 50000.0,
    "suspicious_low_threshold": 0.10,
    "category_specific_ranges": {
      "infrastructure": {
        "structures": {
          "per_sq_ft": [5.0, 500.0],
          "each": [100.0, 50000.0]
        },
        "benching": {
          "per_sq_ft": [2.0, 100.0],
          "each": [50.0, 5000.0]
        },
        "climate_control": {
          "each": [200.0, 25000.0],
          "per_sq_ft": [1.0, 50.0]
        },
        "irrigation": {
          "each": [50.0, 10000.0],
          "per_sq_ft": [0.50, 20.0]
        }
      },
      "operational_costs": {
        "growing_supplies": {
          "per_pound": [0.50, 100.0],
          "per_gallon": [1.0, 200.0],
          "per_bag": [10.0, 500.0]
        },
        "utilities": {
          "per_kwh": [0.05, 0.50],
          "per_gallon": [0.001, 0.10],
          "per_therm": [0.50, 5.0]
        }
      }
    }
  },
  
  "data_freshness": {
    "max_age_days": 365,
    "preferred_age_days": 90,
    "critical_age_days": 730,
    "category_specific_freshness": {
      "commodity_prices": {
        "max_age_days": 30,
        "preferred_age_days": 7
      },
      "equipment_pricing": {
        "max_age_days": 180,
        "preferred_age_days": 60
      },
      "utility_rates": {
        "max_age_days": 90,
        "preferred_age_days": 30
      }
    }
  },
  
  "required_fields": {
    "cost_items": [
      "item_id",
      "item_name", 
      "category"
    ],
    "cost_pricing": [
      "unit_cost",
      "unit",
      "effective_date",
      "confidence_level"
    ],
    "source_references": [
      "source_url",
      "date_accessed"
    ]
  },
  
  "confidence_weights": {
    "has_source": 0.25,
    "recent_data": 0.20,
    "complete_fields": 0.20,
    "reasonable_price": 0.15,
    "has_product_code": 0.10,
    "has_specifications": 0.10
  },
  
  "validation_rules": {
    "required_fields": {
      "enabled": true,
      "level": "critical"
    },
    "item_id_format": {
      "enabled": true,
      "level": "warning",
      "pattern": "^[A-Z]+_[A-Z0-9_]+$"
    },
    "price_range": {
      "enabled": true,
      "level": "error"
    },
    "price_reasonableness": {
      "enabled": true,
      "level": "warning"
    },
    "source_required": {
      "enabled": true,
      "level": "critical"
    },
    "source_url_format": {
      "enabled": true,
      "level": "error",
      "pattern": "^https?://.+"
    },
    "data_freshness": {
      "enabled": true,
      "level": "warning"
    },
    "specifications_completeness": {
      "enabled": true,
      "level": "info"
    },
    "product_code_format": {
      "enabled": true,
      "level": "warning",
      "pattern": "^[A-Z0-9-_]+$"
    }
  },
  
  "source_tier_requirements": {
    "tier_1": {
      "description": "Direct from supplier (preferred)",
      "confidence_boost": 0.15,
      "examples": [
        "Manufacturer websites",
        "Direct quotes",
        "Official catalogs"
      ]
    },
    "tier_2": {
      "description": "Industry sources (acceptable)",
      "confidence_boost": 0.10,
      "examples": [
        "Government databases",
        "Industry reports",
        "Trade publications"
      ]
    },
    "tier_3": {
      "description": "Indirect sources (use with caution)",
      "confidence_boost": 0.05,
      "examples": [
        "Comparable products",
        "Historical data with adjustments",
        "Regional averages"
      ]
    }
  },
  
  "unit_validation": {
    "valid_units": [
      "each",
      "per_sq_ft",
      "per_foot",
      "per_gallon",
      "per_pound",
      "per_kg",
      "per_liter", 
      "per_piece",
      "per_pack",
      "per_bag",
      "per_kwh",
      "per_therm",
      "per_month",
      "per_year"
    ],
    "unit_aliases": {
      "ea": "each",
      "sqft": "per_sq_ft",
      "sq ft": "per_sq_ft",
      "ft": "per_foot",
      "gal": "per_gallon",
      "lb": "per_pound",
      "lbs": "per_pound"
    }
  },
  
  "cross_validation": {
    "price_consistency_threshold": 0.30,
    "duplicate_similarity_threshold": 0.85,
    "enabled_checks": [
      "duplicate_detection",
      "price_consistency",
      "category_consistency"
    ]
  },
  
  "reporting": {
    "summary_levels": [
      "item",
      "category", 
      "revenue_stream",
      "overall"
    ],
    "export_formats": [
      "json",
      "csv",
      "html"
    ],
    "include_in_reports": [
      "validation_summary",
      "detailed_results",
      "recommendations",
      "quality_metrics"
    ]
  }
}